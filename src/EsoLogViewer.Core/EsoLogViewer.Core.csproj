<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
    <PackageReference Include="BCnEncoder.Net" Version="2.2.1" />
    <!-- Adds ImageSharp APIs to BCnEncoder.Net (correct package id is 'BCnEncoder.Net.ImageSharp') -->
    <PackageReference Include="BCnEncoder.Net.ImageSharp" Version="1.1.2" />
    <!-- Keep ImageSharp explicit so we control the version (BCnEncoder.Net.ImageSharp requires >= 3.1.7) -->
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
  </ItemGroup>
</Project>
